#!/usr/bin/env node

const fs = require("fs");
const path = require("path");

const project = path.join(__dirname, "../tsconfig.json");
const dev = fs.existsSync(project);

if (dev) {
  require("ts-node").register({ project });
}

const { app } = dev ? require("../src") : require("../lib");

app.listen(3000, (err, address) => {
  if (err) {
    throw err;
  }
});
